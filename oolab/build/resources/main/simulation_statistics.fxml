<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Box?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="agh.ics.oop.presenter.StatisticsPresenter"
      spacing="10" fx:id="stats">
    <padding>
        <Insets top="10" bottom="10" left="10" right="10"/>
    </padding>
    <fx:define><fx:include source="animal_statistics.fxml" fx:id="animalStats"/></fx:define>

    <Label text="Statystyki symulacji"/>
    <Label fx:id="animalAmountLabel"/>
    <Label fx:id="grassAmountLabel"/>
    <Label fx:id="freeSpaceLabel"/>
    <Label text="Popularne genotypy"/>
    <VBox fx:id="popularGenotypesVbox"/>
    <Label fx:id="averageEnergyLevel"/>
    <Label fx:id="averageLifeSpanLabel"/>
    <Label fx:id="averageChildAmountLabel"/>
    <Label fx:id="LivingAndDeadAnimalsLabel"/>
    <Separator/>
    <VBox fx:id="animalTrackingVBox"/>
    <Button fx:id="stopTrackingButton" text="Przestań śledzić" onAction="#stopTracking"/>

</VBox>
